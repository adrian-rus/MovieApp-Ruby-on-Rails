<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Release</th>
      <th>Actions</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release %></td>
        <td><%= link_to 'Show', movie %> |</td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %> | </td>
        <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %> | </td>  
        <td><%= link_to 'Show reviews', movie_reviews_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

